<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center">Map</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <input id="address" type="textbox" value="GeekSalon">
      <input id="button" value="Encode" onclick="codeAddress()">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div id="map"></div>
      
      <style>
        #map {
            height: 200px;
            width: 200px;
        }
      </style>
      
      <script>
        let map
        
        function initMap(){
            geocoder = new google.maps.Geocoder()
            
            map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: 40.7828, lng: -73.9653},
              zoom: 12,
            });
            
            marker = new google.maps.Marker({
              position: {lat: 40.7828, lng: -73.9653},
              map: map
            });
        }
        
        let geocoder
        
        function codeAddress(){
          let inpututAddress = document.getElementById('address').value;
          
          geocoder.geocode( { 'address': inputAddress}, function(results, status) {
            if(status == 'OK'){
              map.setCenter(results[0].geometry.location);
              var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
              });
            } else {
                alert('該当する結果はありませんでした:' + status);
              }
          });
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCSDldjbAKxHnM7mLcCyG9uypT_u2HLCzc&callback=initMap" async defer></script>
    </div>
  </div>
</div>